{% autoescape off %}<?xml version="1.0" encoding="UTF-8"?>
    {% spaceless %}
        <contest>
            <contest_name>Design Jovoto</contest_name>
            <link>http://www.jovoto.com/contests/design-jovoto</link>
            <guid>http://www.jovoto.com/contests/design-jovoto.xml</guid>
            <ideas>
                {% for idea in ideas %}
                    <idea>
                        <name>{{ idea.name }}</name>
                        <description>{{ idea.description }}</description>
                        <pubDate>{{ idea.pubdate|date:"Y-m-d H:i:s" }}</pubDate>
                        <link>{{ idea.link }}</link>
                        <guid>{{ idea.guid }}</guid>
                        {% for media in idea.media %}
                            <media>
                                <type>{{ media.type }}</type>
                                <thumb>{{ media.thumb }}</thumb>
                                <medium>{{ media.medium }}</medium>
                                <big>{{ media.big }}</big>
                                <path>{{ media.path }}</path>
                            </media>
                        {% endfor %}
                    </idea>
                {% endfor %}
            </ideas>
        </contest>
    {% endspaceless %}
{% endautoescape %}