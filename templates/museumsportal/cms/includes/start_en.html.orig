{% load base_tags cms_tags i18n image_modifications slideshows infoblocks %}

{% slideshow "start_slideshow_en" %}

<div id="teaser" class="content">
  <div class="container">
    <div class="row row-narrow">
      <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
        <h3>{% trans "Featured Museums" %}</h3>
        <div class="compact">
          {% placeholder "start_page_left" %}
        </div>
      </div>

      <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
        <h3>{% trans "Good to know" %}</h3>
        <div class="compact">
          {% placeholder "start_page_center" %}
        </div>
      </div>

      <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
        <h3>{% trans "Featured Exhibitions" %}</h3>
        <div class="compact">
          {% placeholder "start_page_right" %}
        </div>
      </div>
    </div>
  </div>
</div>

{% load advertising_tags %}
{% random_zone_ad 'start_page' %}

<div id="museumsportal-tweets" class="content">
  <div class="container">
    <div class="twitter_frontpage">
      <h3>{% trans "Twitter" %} <a href="https://twitter.com/museumsportal" target="_blank">({% trans "Follow us" %})</a></h3>
      <ul class="clearfix" id="tweets" data-twitter-username="museumsportal"> </ul>
    </div>
  </div>
</div>
